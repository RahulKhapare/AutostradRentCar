<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/lnrMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/txtCarName"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/nunit_sans_bold"
                            android:textSize="14sp">

                        </TextView>

                        <ImageView
                            android:id="@+id/imgCar"
                            android:layout_width="154dp"
                            android:layout_height="106dp"></ImageView>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/reservationNo"
                            android:textColor="@color/textDark"
                            android:fontFamily="@font/nunito_sans_semibold"
                            android:textSize="14sp">

                        </TextView>

                        <TextView
                            android:id="@+id/txtReservationNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textColor="@color/textDark"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:textSize="12sp">

                        </TextView>


                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sharjah"
                                android:textColor="@color/textDark"
                                android:fontFamily="@font/nunit_sans_bold"
                                android:textSize="14sp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sharjahPick"
                                android:textColor="@color/textDark"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                android:alpha="0.8"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:textSize="12sp">

                            </TextView>


                        </LinearLayout>
                        <TextView
                            android:id="@+id/txtPickup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textDark"
                            android:text="@string/app_name"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:textSize="12sp">

                        </TextView>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sharjah"
                                android:textColor="@color/textDark"
                                android:fontFamily="@font/nunit_sans_bold"
                                android:textSize="14sp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sharjahDrop"
                                android:textColor="@color/textDark"
                                android:alpha="0.8"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textSize="12sp">

                            </TextView>


                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtDropoff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textDark"
                            android:text="@string/app_name"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:textSize="12sp">

                        </TextView>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@color/redWhite"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtMessage"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/redText"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:textSize="14sp">

                </TextView>


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>