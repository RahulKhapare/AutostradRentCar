<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">
                
                <ImageView
                    android:id="@+id/imgCar"
                    android:layout_width="134dp"
                    android:layout_height="96dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="12dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_car_grey">

                </ImageView>

                <LinearLayout
                    android:layout_below="@+id/imgCar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txtCarName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:textSize="14sp"
                        android:textColor="@color/textDark"
                        android:text="@string/app_name">
                    </TextView>

                    <TextView
                        android:id="@+id/txtCarGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunit_sans_bold"
                        android:textSize="14sp"
                        android:textColor="@color/textDark"
                        android:text="@string/app_name">
                    </TextView>

                    <TextView
                        android:id="@+id/txtMore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunit_sans_bold"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/lightBlue"
                        android:text="@string/viewMore">
                    </TextView>


                </LinearLayout>

            <ImageView
                android:id="@+id/imgLike"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_like_gray"></ImageView>

            <ImageView
                android:id="@+id/imgDisLike"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_like_fill"></ImageView>

        </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>