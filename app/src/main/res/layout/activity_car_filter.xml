<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:titleTextColor="@color/colorWhite"
            app:subtitleTextColor="@color/colorWhite"
            android:theme="@style/ToolbarColoredBackArrow"
            android:background="@color/colorPrimaryDark">
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/curve_main_bg"
            android:layout_below="@+id/toolbar">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardGroup"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="1dp"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txtGroupTitle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/textDark"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:text="@string/selectGroup"
                                android:textSize="18sp">
                            </TextView>


                            <ImageView
                                android:id="@+id/imgGroupRight"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true">
                            </ImageView>

                            <ImageView
                                android:id="@+id/imgGroupLeft"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="15dp"
                                android:visibility="gone"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true">
                            </ImageView>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_below="@+id/recyclerGroupSelected"
                        android:id="@+id/cardPassengers"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="1dp"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txtPassengetTitle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/textDark"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:text="@string/selectPassengers"
                                android:textSize="18sp">
                            </TextView>


                            <ImageView
                                android:id="@+id/imgPassengerRight"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true">
                            </ImageView>

                            <ImageView
                                android:id="@+id/imgPassengerLeft"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="15dp"
                                android:visibility="gone"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true">
                            </ImageView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_below="@+id/recyclerPassengersSelected"
                        android:id="@+id/cardDoors"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="1dp"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txtDoorTitle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/textDark"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:text="@string/selectDoors"
                                android:textSize="18sp">
                            </TextView>


                            <ImageView
                                android:id="@+id/imgDoorRight"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true">
                            </ImageView>

                            <ImageView
                                android:id="@+id/imgDoorLeft"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="15dp"
                                android:visibility="gone"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true">
                            </ImageView>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_below="@+id/recyclerDoorsSelected"
                        android:id="@+id/cardSuitcase"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="1dp"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txtSuitcaseTitle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/textDark"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:text="@string/selectSuitcase"
                                android:textSize="18sp">
                            </TextView>


                            <ImageView
                                android:id="@+id/imgSuitcaseRight"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true">
                            </ImageView>

                            <ImageView
                                android:id="@+id/imgSuitcaseLeft"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="15dp"
                                android:visibility="gone"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true">
                            </ImageView>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_below="@+id/recyclerSuitcaseSelected"
                        android:id="@+id/cardTransmission"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="1dp"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txtTransmissionTitle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/textDark"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:text="@string/selectTransmission"
                                android:textSize="18sp">
                            </TextView>


                            <ImageView
                                android:id="@+id/imgTransRight"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true">
                            </ImageView>

                            <ImageView
                                android:id="@+id/imgTransLeft"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="15dp"
                                android:visibility="gone"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true">
                            </ImageView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_below="@+id/recyclerTransmissionSelected"
                        android:id="@+id/cardFuel"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="1dp"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txtFuilTitle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/textDark"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:text="@string/selectFuel"
                                android:textSize="18sp">
                            </TextView>


                            <ImageView
                                android:id="@+id/imgFuelRight"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true">
                            </ImageView>

                            <ImageView
                                android:id="@+id/imgFuelLeft"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="15dp"
                                android:visibility="gone"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true">
                            </ImageView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>



                    <TextView
                        android:layout_below="@+id/recyclerFuilSelected"
                        android:id="@+id/txtApply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunit_sans_bold"
                        android:textColor="@color/colorWhite"
                        android:text="@string/apply"
                        android:padding="16dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="50dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:background="@drawable/button_blue_bg"></TextView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/viewGroup"
                        android:layout_below="@+id/cardGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="-5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/customeGray"
                                tools:ignore="Suspicious0dp">

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbarSize="7dp"
                                android:scrollbarFadeDuration="0"
                                android:scrollbarThumbVertical="@drawable/scrollbar_shape"
                                android:scrollbars="vertical">

                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/viewPassengers"
                        android:layout_below="@+id/cardPassengers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="-5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/customeGray"
                                tools:ignore="Suspicious0dp">

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerPassengers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbarSize="7dp"
                                android:scrollbarFadeDuration="0"
                                android:scrollbarThumbVertical="@drawable/scrollbar_shape"
                                android:scrollbars="vertical">

                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/viewDoors"
                        android:layout_below="@+id/cardDoors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="-5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/customeGray"
                                tools:ignore="Suspicious0dp">

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerDoors"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbarSize="7dp"
                                android:scrollbarFadeDuration="0"
                                android:scrollbarThumbVertical="@drawable/scrollbar_shape"
                                android:scrollbars="vertical">

                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/viewTransmission"
                        android:layout_below="@+id/cardTransmission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="-5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/customeGray"
                                tools:ignore="Suspicious0dp">

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerTransmission"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbarSize="7dp"
                                android:scrollbarFadeDuration="0"
                                android:scrollbarThumbVertical="@drawable/scrollbar_shape"
                                android:scrollbars="vertical">

                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/viewFuel"
                        android:layout_below="@+id/cardFuel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="-5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/customeGray"
                                tools:ignore="Suspicious0dp">

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerFuel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbarSize="7dp"
                                android:scrollbarFadeDuration="0"
                                android:scrollbarThumbVertical="@drawable/scrollbar_shape"
                                android:scrollbars="vertical">

                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/viewSuitcase"
                        android:layout_below="@+id/cardSuitcase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="-5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/customeGray"
                                tools:ignore="Suspicious0dp">

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerSuitcase"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbarSize="7dp"
                                android:scrollbarFadeDuration="0"
                                android:scrollbarThumbVertical="@drawable/scrollbar_shape"
                                android:scrollbars="vertical">

                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerGroupSelected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardGroup"
                        />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerPassengersSelected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardPassengers"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerDoorsSelected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardDoors"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerSuitcaseSelected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardSuitcase"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerTransmissionSelected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardTransmission"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerFuilSelected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardFuel"
                        />


                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </RelativeLayout>
</layout>