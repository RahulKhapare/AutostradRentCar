<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="@string/productManager">

            </TextView>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/textDark"
                    android:alpha="0.5"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:text="@string/location">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:alpha="0.5"
                    android:textColor="@color/textDark"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:text="-">

                </TextView>

                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/textDark"
                    android:alpha="0.5"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:text="@string/locations">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/textDark"
                    android:alpha="0.5"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:text="@string/experience">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/textDark"
                    android:alpha="0.5"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:text="-">

                </TextView>

                <TextView
                    android:id="@+id/txtExperence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/textDark"
                    android:alpha="0.5"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:text="@string/locations">

                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/txtDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/textDark"
                android:fontFamily="@font/nunito_sans_regular"
                android:text="@string/app_name">

            </TextView>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtApplyNow"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/applyNow"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_orange_bg"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp">

                </TextView>

                <TextView
                    android:id="@+id/txtShare"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/shareToFriend"
                    android:background="@drawable/button_blue_bg"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/textDark"
            android:alpha="0.5"></LinearLayout>

    </LinearLayout>

</layout>