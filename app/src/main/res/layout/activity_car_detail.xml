                            android:id="@+id/lnrEstimated"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <LinearLayout
                                android:id="@+id/lnrEst"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtEstimated"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/nunito_sans_semibold"
                                    android:text="@string/estimatedTotal"
                                    android:textSize="18sp">
                                </TextView>


                                <LinearLayout
                                    android:id="@+id/txtAde"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:gravity="center_vertical"
                                        android:layout_gravity="center_vertical"
                                        android:fontFamily="@font/nunit_sans_bold"
                                        android:text="@string/ade100"
                                        android:textSize="20sp">
                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:layout_gravity="center_vertical"
                                        android:fontFamily="@font/nunito_sans_regular"
                                        android:text="@string/baseFree"
                                        android:textSize="14sp">
                                    </TextView>


                                </LinearLayout>


                            </LinearLayout>

                            <ImageView
                                android:id="@+id/imgEstimatedRight"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true">
                            </ImageView>

                            <ImageView
                                android:id="@+id/imgEstimatedLeft"
                                android:layout_width="25dp"
