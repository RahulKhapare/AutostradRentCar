                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:text="@string/pickUp"
                                android:textColor="@color/textDark"
