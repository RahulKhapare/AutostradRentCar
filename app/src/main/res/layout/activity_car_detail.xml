                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:maxLines="1"
                                    android:text="@string/app_name"
                                    android:alpha="0.8"
                                    android:textColor="@color/textDark"
                                    android:textSize="16sp">

                                </TextView>

                                <TextView
                                    android:id="@+id/txtAutomaticOne"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:textColor="@color/textDark"
                                    android:textSize="16sp"
                                    android:text="@string/app_name"
                                    android:alpha="0.8"
                                    android:drawableLeft="@drawable/mode_bg_two"
                                    android:drawablePadding="5dp"
                                    android:maxLines="1">

                                </TextView>

                                <TextView
                                    android:id="@+id/txtAutomaticTwo"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/app_name"
                                    android:alpha="0.8"
                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:textColor="@color/textDark"
                                    android:textSize="16sp"
                                    android:drawableLeft="@drawable/mode_bg_two"
                                    android:drawablePadding="5dp"
                                    android:maxLines="1">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtDoor"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/doore_bg_two"
                                    android:drawablePadding="5dp"
                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:maxLines="1"
                                    android:text="@string/app_name"
                                    android:alpha="0.8"
                                    android:textColor="@color/textDark"
                                    android:textSize="16sp">

                                </TextView>

                                <TextView
                                    android:id="@+id/txtSuitcaseOne"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:textColor="@color/textDark"
                                    android:textSize="16sp"
                                    android:text="@string/app_name"
                                    android:alpha="0.8"
                                    android:drawableLeft="@drawable/suitcase_bg_two"
                                    android:drawablePadding="5dp"
                                    android:maxLines="1">

                                </TextView>

                                <TextView
                                    android:id="@+id/txtSuitcaseTwo"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/app_name"
                                    android:alpha="0.8"
                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:textColor="@color/textDark"
                                    android:textSize="16sp"
                                    android:drawableLeft="@drawable/suitcase_bg_two"
                                    android:drawablePadding="5dp"
                                    android:maxLines="1">

                                </TextView>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/customeGray"></LinearLayout>


                        <RelativeLayout
                            android:id="@+id/lnrInsurance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/txtInsurance"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorPrimaryDark"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:text="@string/insranceOption"
                                android:textSize="18sp">
                            </TextView>


                            <ImageView
                                android:id="@+id/imgInsuranceRight"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true">
                            </ImageView>

                            <ImageView
                                android:id="@+id/imgInsuranceLeft"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:visibility="gone">
                            </ImageView>

                            <LinearLayout
                                android:layout_below="@+id/txtInsurance"
                                android:id="@+id/viewInsurance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/customeGray"></LinearLayout>

                        <RelativeLayout
                            android:id="@+id/lnrPromotions"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/txtPromotions"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorPrimaryDark"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:text="@string/promotionCode"
                                android:textSize="18sp">
                            </TextView>


                            <ImageView
                                android:id="@+id/imgPromotionRight"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true">
                            </ImageView>

                            <ImageView
                                android:id="@+id/imgPromotionLeft"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:visibility="gone">
                            </ImageView>

                            <LinearLayout
                                android:layout_below="@+id/txtPromotions"
                                android:id="@+id/viewPromotion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:orientation="vertical">

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/customeGray"></LinearLayout>


