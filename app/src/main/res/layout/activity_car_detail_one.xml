<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:theme="@style/ToolbarColoredBackArrow"
            app:subtitleTextColor="@color/colorWhite"
            app:titleTextColor="@color/colorWhite"></androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="10dp"
            android:background="@drawable/curve_main_bg">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nestedSroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/cardBottom"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        android:padding="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/txtCarName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/nunit_sans_bold"
                                android:text="@string/app_name"
                                android:textColor="@color/textDark"
                                android:textSize="18sp">

                            </TextView>

                            <TextView
                                android:id="@+id/txtUpgrade"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunit_sans_bold"
                                android:text="@string/upgrade"
                                android:textColor="@color/lightBlue"
                                android:textSize="16sp">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="271dp"
                                android:layout_height="162dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="0dp"
                                android:layout_marginRight="0dp"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/imgCar"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_car_four"></ImageView>

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerCarRelated"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </androidx.recyclerview.widget.RecyclerView>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/customeGray"></LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:padding="16dp"
                              android:orientation="vertical">

                              <LinearLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal">

                                  <TextView
                                      android:layout_weight="1"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:fontFamily="@font/nunito_sans_semibold"
                                      android:text="@string/pickupLocationTime"
                                      android:textColor="@color/colorPrimaryDark"
                                      android:textSize="18sp">

                                  </TextView>

                                  <TextView
                                      android:id="@+id/txtPickupEdit"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:fontFamily="@font/nunito_sans_semibold"
                                      android:text="@string/edit"
                                      android:layout_marginLeft="20dp"
                                      android:layout_marginRight="20dp"
                                      android:textColor="@color/lightBlue"
                                      android:textSize="14sp">

                                  </TextView>
                                  <TextView
                                      android:id="@+id/txtPickupDetails"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:fontFamily="@font/nunito_sans_semibold"
                                      android:text="@string/details"
                                      android:textColor="@color/lightBlue"
                                      android:textSize="14sp">

                                  </TextView>

                              </LinearLayout>

                              <TextView
                                  android:id="@+id/txtPickUpLocation"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_marginTop="5dp"
                                  android:layout_weight="1"
                                  android:fontFamily="@font/nunito_sans_regular"
                                  android:text="@string/pickUp"
                                  android:textColor="@color/textDark"
                                  android:alpha="0.8"
                                  android:textSize="16sp">

                              </TextView>

                          </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/customeGray"></LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/nunito_sans_semibold"
                                        android:text="@string/dropoffLocationTime"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="18sp">

                                    </TextView>

                                    <TextView
                                        android:id="@+id/txtDropupEdit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/nunito_sans_semibold"
                                        android:text="@string/edit"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:textColor="@color/lightBlue"
                                        android:textSize="14sp">

                                    </TextView>
                                    <TextView
                                        android:id="@+id/txtDropupDetails"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/nunito_sans_semibold"
                                        android:text="@string/details"
                                        android:textColor="@color/lightBlue"
                                        android:textSize="14sp">

                                    </TextView>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/txtDropOffLocation"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:text="@string/pickUp"
                                    android:alpha="0.8"
                                    android:textColor="@color/textDark"
                                    android:textSize="16sp">

                                </TextView>


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/customeGray"></LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/nunito_sans_semibold"
                                    android:text="@string/paymentMethod"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp">

                                </TextView>


                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtPayMethod"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:text="@string/app_name"
                                android:alpha="0.8"
                                android:textColor="@color/textDark"
                                android:textSize="16sp">

                            </TextView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/customeGray"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/nunito_sans_semibold"
                                    android:text="@string/includedRated"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp">

                                </TextView>

                            </LinearLayout>


                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">

                               <TextView

                                   android:layout_width="150dp"
                                   android:layout_height="wrap_content"
                                   android:layout_marginTop="5dp"
                                   android:fontFamily="@font/nunito_sans_regular"
                                   android:text="@string/carRate"
                                   android:alpha="0.8"
                                   android:textColor="@color/textDark"
                                   android:textSize="16sp">

                               </TextView>

                               <TextView
                                   android:id="@+id/txtCarRate"
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:textColor="@color/textDark"
                                   android:gravity="center_vertical"
                                   android:layout_marginLeft="20dp"
                                   android:layout_marginRight="20dp"
                                   android:layout_gravity="center_vertical"
                                   android:fontFamily="@font/nunit_sans_bold"
                                   android:text="@string/app_name"
                                   android:textSize="18sp">
                               </TextView>

                               <TextView
                                   android:id="@+id/txtCarAEDDetails"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:fontFamily="@font/nunito_sans_semibold"
                                   android:text="@string/details"
                                   android:textColor="@color/lightBlue"
                                   android:textSize="14sp">

                               </TextView>


                           </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnrAddOns"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="0dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/nunito_sans_semibold"
                                    android:text="@string/addOes"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp">

                                </TextView>


                            </LinearLayout>


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerAdOns"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </androidx.recyclerview.widget.RecyclerView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/customeGray"></LinearLayout>


                        <RelativeLayout
                            android:id="@+id/lnrInsurance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <LinearLayout
                                android:id="@+id/lnrmInsurance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_weight="1"
                                    android:id="@+id/txtInsurance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:fontFamily="@font/nunito_sans_semibold"
                                    android:text="@string/rentalTerm"
                                    android:textSize="18sp">
                                </TextView>

                                <RelativeLayout
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/imgInsuranceRight"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginRight="15dp"
                                        android:src="@drawable/ic_down_arrow"
                                        >
                                    </ImageView>

                                    <ImageView
                                        android:id="@+id/imgInsuranceLeft"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="15dp"
                                        android:src="@drawable/ic_down_arrow"
                                        android:visibility="gone">
                                    </ImageView>
                                </RelativeLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_below="@+id/lnrmInsurance"
                                android:id="@+id/viewInsurance"
                                android:layout_marginTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:orientation="vertical">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerRentalView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </androidx.recyclerview.widget.RecyclerView>
                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/customeGray"></LinearLayout>


                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="-15dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="30dp"
                       android:layout_marginTop="25dp"
                       android:layout_marginRight="30dp"
                       android:layout_marginBottom="30dp"
                       android:orientation="horizontal">

                       <LinearLayout
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:gravity="center"
                           android:orientation="vertical">

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:textColor="@color/textDark"
                               android:gravity="center_vertical"
                               android:layout_gravity="center_vertical"
                               android:fontFamily="@font/nunito_sans_semibold"
                               android:text="@string/total"
                               android:textSize="16sp">
                           </TextView>

                           <TextView
                               android:id="@+id/txtTotalAED"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:textColor="@color/textDark"
                               android:gravity="center_vertical"
                               android:layout_gravity="center_vertical"
                               android:fontFamily="@font/nunit_sans_bold"
                               android:text="0.0"
                               android:textSize="20sp">
                           </TextView>


                       </LinearLayout>

                       <TextView
                           android:id="@+id/txtBook"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="right"
                           android:background="@drawable/button_blue_bg"
                           android:fontFamily="@font/nunit_sans_bold"
                           android:gravity="right"
                           android:paddingRight="60dp"
                           android:paddingLeft="60dp"
                           android:paddingBottom="16dp"
                           android:paddingTop="16dp"
                           android:text="@string/book"
                           android:textColor="@color/colorWhite"
                           android:textSize="18dp" />

                   </LinearLayout>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>
</layout>