<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/custome_dialog_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtType"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:textSize="18sp"
                        android:textColor="@color/textDark"
                        >

                    </TextView>


                </LinearLayout>

                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:textSize="16sp"
                    android:textColor="@color/grayTwo"
                    >

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grayTwo">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:orientation="vertical">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:textSize="18sp"
                    android:textColor="@color/textDark"
                    >

                </TextView>

                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grayTwo"
                    >

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pEmail"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/textDark"
                        />

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/grayTwo"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pPhone"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/textDark"
                        />

                    <TextView
                        android:id="@+id/txtPhoneNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/grayTwo"
                        />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grayTwo">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:orientation="vertical">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/timings"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:textSize="18sp"
                    android:textColor="@color/textDark"
                    >

                </TextView>

                <TextView
                    android:id="@+id/txtTiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grayTwo"
                    >

                </TextView>


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_close_round">

        </ImageView>

    </RelativeLayout>



</LinearLayout>